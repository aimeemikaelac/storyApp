<%= form_for(@story, :url => create_story_path(session[:user_id])) do |f| %>
	<% if @story.errors.any? %>
		<div id="error_explanation" >
			<h2><%= pluralize(@story.errors.count, "error") %>
			prohibited this story from being saved:</h2>
			<ul>
				<% @story.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<div class="field" >
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>
	
	<%= f.hidden_field :user_id, :value => session[:user_id]%>
	
	<div class = "actions">
		<%= f.submit %>
	</div>
	
<% end %>
